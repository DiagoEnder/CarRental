@using CarRental.Areas.Admin.Models
@model CarRental.Areas.Admin.Models.User;

<style>
    /* Custom CSS styles for the modal */
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }



    .modal-title {
        font-size: 18px;
    }

    .modal-body {
        padding: 10px;
    }

    .modal-footer {
        padding: 10px;
        border-top: 1px solid #ddd;
        text-align: right;
    }

    .btn1 {
        padding: 5px 10px;
        margin: 0 5px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-primary1 {
        background-color: #007bff;
        color: #fff;
    }

    .btn-danger1 {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-close1 {
        float: right;
    }
</style>

<div class="modal fade" id="loginForm">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <div>
                    <h4 class="modal-title">Login</h4>

                </div>
                <button type="button" class="btn1 btn-close1" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            @* <form method="post" asp-action="Login"> *@

            @using (Html.BeginForm("Login", "Start", FormMethod.Post))
            {


               
                <div class="modal-body">
                    
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Email, new { @class="form-control form-control-lg"
                        , placeholder="Username",type="email", required="required", autofocus= "autofocus"})
                       @*  <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span> *@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Password, new { @class="form-control form-control-lg"
                    , placeholder="Password",type="password", required="required", autofocus= "autofocus"})
                       @*  <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span> *@
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn1 btn-primary1">Đăng Nhập</button>
                    <button type="button" class="btn1 btn-danger1" data-dismiss="modal">Đăng ký</button>
                </div>
            }
            
            @* </form> *@
        </div>
    </div>
</div>



