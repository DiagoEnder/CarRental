<script >
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    })



    $(document).ready(function () {


        

        $("#btnImg").click(function () {

            var fileInput = document.getElementById('FLFrontImage');
            var file = fileInput.files[0];

            var formData = new FormData();
           
            formData.append('FrontImage', file);
            


            console.log("Daclick");

            $.ajax({
                type: "Post",
                url: "@Url.Action("UploadedFile","Profiles")",
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {

                    console.log(res);

                    $.ajax({
                        type: "Post",
                        url: "@Url.Action("Edit","Profiles")",
                        data: { Img: res },
                        success: function (response) {
                            alert("Thanh cong");
                            var serverRoot = "@Url.Content("~/Upload/")"; // Chắc chắn rằng Url.Content đang trả về đúng đường dẫn

                            $("#changeImg img").attr("src", serverRoot + response);
                            document.querySelector("#exampleModal [data-dismiss='modal']").click();
                            

                        },
                        error: function () {
                            alert("Ko thể update Img");
                        }
                    });
                },
                error: function () {
                    alert("lỗi ở uploadfile")
                }

            });

            

            
        });

    });

</script>