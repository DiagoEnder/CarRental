@using CarRental.Areas.Admin.Models;

@{
    ViewData["Title"] = "All Ram";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Role>
<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->
@{
    var i = 0;
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Mục</a></li>
                                <li class="breadcrumb-item active">Role</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Role</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">
                        <div class="fileupload btn btn-success waves-effect waves-light mb-3">
                            <span>
                                <a type="button" data-toggle="modal" data-target="#addRole">
                                    Create
                                </a>
                            </span>


                            @*  <span>
                            <i class="mdi mdi-cloud-upload mr-1"></i>

                            <a asp-area="Admin" asp-controller="Hangs" asp-action="Create" style="color:#fff">Create</a>
                            </span> *@

                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered mb-0">
                                <thead class="font-13 bg-light text-muted">
                                    <tr>
                                        <th class="font-weight-medium">Id</th>
                                        <th class="font-weight-medium">Name</th>

                                        <th class="font-weight-medium text-center" style="width: 125px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Role item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="javascript:void(0);" class="text-dark">
                                                    @item.Id
                                                </a>
                                            </td>
                                            <td class="text-muted font-13">@item.NameRole</td>

                                            <td>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                    <button class="btn btn-link font-18 text-muted btn-sm">
                                                        <i class="mdi mdi-close"></i>
                                                    </button>
                                                </form>

                                                <a class="btn btn-link font-18 text-muted btn-sm"
                                                   data-toggle="modal" data-target="@("#editRole-" + item.Id)" data-url="@Url.Action($"Edit/{item.Id}")">


                                                    <i class="mdi mdi-pencil"></i>
                                                </a>
                                                @await Html.PartialAsync("EditRolePartialView",item)

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->
    <!-- Footer Start -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    2016 - 2019 &copy; Minton theme by <a href="">Coderthemes</a>
                </div>
                <div class="col-md-6">
                    <div class="text-md-right footer-links d-none d-sm-block">
                        <a href="javascript:void(0);">About Us</a>
                        <a href="javascript:void(0);">Help</a>
                        <a href="javascript:void(0);">Contact Us</a>

                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- end Footer -->

</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->
@await Html.PartialAsync("_RolePartialView", new Role());

<script>
    function redirectToIndex() {
        window.location.href = '@Url.Action("Index", "Roles", new { area = "Admin" })';
    }
</script>
